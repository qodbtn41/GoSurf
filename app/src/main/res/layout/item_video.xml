<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/video"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/include2"
        android:layout_toRightOf="@+id/image_delete"
        android:layout_toEndOf="@+id/image_delete" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/item_text"
        android:layout_alignParentBottom="true"
        android:id="@+id/include2"
        android:layout_alignLeft="@+id/video"
        android:layout_alignStart="@+id/video" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:src="@android:drawable/checkbox_off_background"/>
</RelativeLayout>