<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="@dimen/main_tab_width"
    android:layout_height="@dimen/main_tab_height"
    android:paddingTop="@dimen/main_tab_padding_top"
    android:paddingBottom="@dimen/main_tab_padding_bottom">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_tab_view"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/main_tab_image_margin_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textColor="@color/tab_text_color_selector"
        android:textSize="14sp"
        android:id="@+id/text_tab_view"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_tab_view"
        android:layout_toEndOf="@+id/image_tab_view"
        android:layout_marginLeft="@dimen/main_tab_text_margin_left"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView7"
        android:background="@drawable/tab_underbar_selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/main_tab_underbar_margin_top" />
</RelativeLayout>