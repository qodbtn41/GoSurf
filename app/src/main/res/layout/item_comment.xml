<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/comment_item_width"
    android:layout_height="@dimen/comment_item_height"
    android:paddingLeft="@dimen/comment_item_padding_left"
    android:paddingRight="@dimen/comment_item_padding_right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sini1598"
        android:id="@+id/text_user_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/comment_username_margin_top"
        android:textColor="@color/comment_user_name_color"
        android:textSize="@dimen/comment_user_name_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="17분"
        android:id="@+id/text_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/comment_time_margin_top"
        android:textSize="@dimen/comment_time_text_size"
        android:textColor="@color/comment_time_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="오늘 서해 만리포 가을바다에서 서핑 캠핑..! 아들과 멋진 추억 남겼습니다. 아이들에게 가을바다에서 좋은 추억을 남겨준 ..."
        android:id="@+id/text_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/comment_content_margin_top"
        android:layout_alignParentTop="true"
        android:textColor="@color/comment_content_text_color"
        android:textSize="@dimen/comment_content_text_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_underbar"
        android:id="@+id/image_underbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/underbar_color" />

    <ImageView
        android:layout_width="@dimen/t_detail_comment_menu_size"
        android:layout_height="@dimen/t_detail_comment_menu_size"
        android:id="@+id/image_comment_menu"
        android:src="@drawable/more_detail_button"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/text_user_name"
        android:layout_toRightOf="@+id/text_user_name"
        android:layout_toEndOf="@+id/text_user_name" />

</RelativeLayout>