<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="죽도 Blue Coast"
        android:id="@+id/text_shop_title"
        android:layout_below="@+id/image_shop_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/shop_name_margin_top"
        android:textColor="@color/shop_detail_shop_name_color"
        android:textSize="@dimen/shop_detail_shop_name_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서핑장비대여, 서핑강습(스쿨), 서핑용품판매, 숙박, 게스트하우스, 펍, 레스토랑등 제공."
        android:id="@+id/text_shop_description"
        android:layout_below="@+id/image_shop_detail"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/shop_description_margin_top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/shop_description_margin_left"
        android:layout_marginRight="@dimen/shop_description_margin_right"
        android:textColor="@color/shop_detail_shop_name_color"
        android:textSize="@dimen/shop_detail_shop_description_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_shop_detail"
        android:layout_gravity="left|top"
        android:src="@drawable/animation_list"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="205dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_btn_call"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/call_button"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="@android:color/transparent"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/image_btn_site"
        android:layout_alignBottom="@+id/image_shop_detail"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_btn_search"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/search_button"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/image_btn_site"
        android:layout_alignBottom="@+id/image_shop_detail"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_btn_site"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/site_button"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/image_shop_detail"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <RatingBar
        style="@style/ratingBarSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_bar"
        android:layout_below="@+id/image_shop_detail"
        android:layout_marginTop="@dimen/rating_bar_margin_top"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"/>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_detail_btns"
        android:layout_below="@+id/image_shop_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/shop_buttons_margin_top"
        android:id="@+id/include3"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/delimiter_height"
        android:id="@+id/imageView13"
        android:background="@color/delimiter_color"
        android:layout_below="@+id/include3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>