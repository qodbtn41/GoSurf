<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/shop_detail_btn_width"
    android:layout_height="@dimen/shop_detail_btn_height">

    <ImageView
        android:layout_width="@dimen/shop_detail_btn_image_size"
        android:layout_height="@dimen/shop_detail_btn_image_size"
        android:id="@+id/image_btn_shop_detail"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/shop_detail_btn_image_margin_top"
        android:src="@drawable/comment_detail_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_btn_shop_detail"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/shop_detail_btn_text_margin_top"
        android:textColor="@color/shop_detail_btn_text_color"
        android:textSize="@dimen/shop_detail_btn_text_size" />
</RelativeLayout>